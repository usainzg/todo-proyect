<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorPrimaryDark</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextWhite" parent="AppTheme">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/text_white</item>
        <item name="colorControlHighlight">@color/text_white</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="AppTheme">
        <item name="android:windowBackground">@drawable/main_bg</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="ButtonColor" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ButtonColorWhite" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ButtonColorBlue" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ButtonColorBlueOpposite" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ButtonColorRepairs" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ButtonColorPromotions" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ButtonColorInsurance" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ButtonColorBudget" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyActionBar.MenuTextStyle"
        parent="style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="CropTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

</resources>
